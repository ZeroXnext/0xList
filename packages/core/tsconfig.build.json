{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "composite": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@utils": [
        "src/utils.ts"
      ],
      "@types": [
        "src/types.ts"
      ],
      "@constants": [
        "src/constants.ts"
      ],
      "@helpers": [
        "src/helpers/index.ts"
      ]
    }
  },
  "exclude": [
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
