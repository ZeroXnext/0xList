{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2023",
    "declarationDir": "dist",
    "composite": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@utils": ["src/utils.ts"],
      "@types": ["src/types.ts"],
      "@constants": ["src/constants.ts"],
      "@helpers": ["src/helpers/index.ts"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "bin/*.ts",
  ],
}
